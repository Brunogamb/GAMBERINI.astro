---
import '@fontsource-variable/onest';
import Header from '../components/Header.astro';
import Slider from '../components/Slider.astro';
import Footer from '../components/Footer.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<title>{title}</title>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="theme-color" content="#29166f">
		<meta name="msapplication-navbutton-color" content="#29166f">
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
		<meta name="description" content="Gamberini en Paraná: expertos en bombas de agua y sistemas contra incendios. Distribuidores oficiales Grundfos y Wilo, con soluciones seguras.">
		<meta name="author" content="Gamberini">
		<meta name="robots" content="index, follow">
		<meta name="google-site-verification" content="jF2V4IOM3XUzM6QjTkaYdfoIWwDyenJarEaGBRUrkys" />
		<!-- Open Graph -->
		<meta property="og:locale" content="es_AR">
		<meta property="og:title" content="Gamberini - Bombas de Agua, Protección Contra Incendios y Servicio Técnico Grundfos">
		<meta property="og:description" content="Gamberini: expertos en bombas de agua y sistemas contra incendios en Paraná. Soluciones seguras, eficientes y a medida para empresas e industrias. Distribuidores oficiales Grundfos y Wilo, con asesoramiento técnico y compromiso en cada proyecto.">
		<meta property="og:image" content="https://www.gamberini.com.ar/logoblanco.png">
		<meta property="og:image:secure_url" content="https://www.gamberini.com.ar/og-image.png">
		<meta property="og:image:width" content="1042">
		<meta property="og:image:height" content="200">
		<meta property="og:image:type" content="image/png">
		<meta property="og:image:alt" content="Gamberini logo">
		<meta property="og:url" content="https://www.gamberini.com.ar/">
		<meta property="og:site_name" content="Gamberini">
		<meta property="og:type" content="website">
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:site" content="@gamberinibombas">
		<meta name="twitter:creator" content="@gamberinibombas">
		<meta name="twitter:title" content="Gamberini Bombas - Bombas de Agua, Protección Contra Incendios y Servicio Técnico Grundfos">
		<meta name="twitter:description" content="Gamberini Bombas: expertos en bombas de agua y sistemas contra incendios en Paraná. Soluciones seguras, eficientes y a medida para empresas e industrias. Distribuidores oficiales Grundfos y Wilo, con asesoramiento técnico y compromiso en cada proyecto.">
		<meta name="twitter:image" content="https://www.gamberini.com.ar/og-image.png">
		<meta name="twitter:image:alt" content="Gamberini logo">
		<link rel="apple-touch-icon" href="/img/apple-touch-icon.png">
		<link rel="icon" href="/favicon.ico" type="image/x-icon">
		<link rel="icon" href="/favicon.png" type="image/png">
		<link rel="canonical" href="https://www.gamberini.com.ar/" />
		<link rel="alternate" hreflang="es-AR" href="https://www.gamberini.com.ar/" />
		<meta name="format-detection" content="telephone=yes">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
		<link rel="preload" as="image" href="/img/logoblanco.webp">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "LocalBusiness",
			"name": "Gamberini Bombas",
			"url": "https://www.gamberini.com.ar/",
			"logo": "https://www.gamberini.com.ar/img/logoblanco.webp",
			"telephone": "+543434341997",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "Francisco Soler 1083",
				"addressLocality": "Paraná",
				"postalCode": "3100",
				"addressRegion": "Entre Ríos",
				"addressCountry": "AR"
			},
			"sameAs": [
				"https://www.instagram.com/gamberinibombas/"
			]
		}
		</script>
	</head>
	<body>
		<Header />
		<slot />
		<Slider />
		<Footer />
	</body>
</html>

<style is:global>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
	overflow-y: scroll;
}

body {
    font-family: 'Onest Variable', ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background-color: #f1f1f1;
    display: flex;
    flex-direction: column;
    min-height: 100dvh;
    overflow-x: hidden;
}

header, main, footer {
    width: 100%;
}

a {
    text-decoration: none;
    color: inherit;
}

main {
	flex: 1;
	opacity: 0;
	animation: fadeIn 0.6s ease forwards;
}

@keyframes fadeIn {
	to {
		opacity: 1;
	}
}
</style>