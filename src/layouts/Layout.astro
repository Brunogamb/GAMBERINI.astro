<style is:global>
:root {
	--brand-900: #29166f;
	--brand-900-rgb: 41,22,111;
	--brand-800: #3a2a8f;
	--brand-800-rgb: 58,42,143;
	--brand-700: #5145b6;
	--brand-700-rgb: 81,69,182;

	--bg-muted: #fbfbfb; 
	--white: #ffffff;
	--white-rgb: 255,255,255;
	--text: #232323;
	--muted: #e4e0fa;

	--accent: #a793e7;
	--accent-rgb: 167,147,231;

	--instagram: #E1306C;
	--whatsapp: #25D366;

    --dark-bg: #0f172a;

	--shadow-sm: 0 0 8px 4px rgba(0,0,0,0.05);
	--shadow-md: 0 0 8px rgba(0,0,0,0.1);
	--shadow-lg: 0 2px 10px 0 rgba(0,0,0,0.18);
	--shadow-top: 0 -4px 8px rgba(0,0,0,0.05);

	--radius-xs: 2px;
	--radius-sm: 8px;
	--radius-md: 16px;
	--radius-full: 50%;

	--blur-sm: 6px;
	--blur-md: 8px;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
	overflow-y: scroll;
	background-color: #29166f;
	padding-top: env(safe-area-inset-top);
}

body {
	font-family: 'Onest Variable', ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	background-color: var(--white);
    display: flex;
    flex-direction: column;
    min-height: 100dvh;
    overflow-x: hidden;
}

@font-face {
    font-family: 'Onest Variable';
    font-display: swap;
}

header, main, footer {
    width: 100%;
}

a {
    text-decoration: none;
    color: inherit;
}

main {
	flex: 1;
	opacity: 0;
	animation: fadeIn 0.6s ease forwards;
}

@keyframes fadeIn {
	to {
		opacity: 1;
	}
}
</style>