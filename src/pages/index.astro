---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import logo from '../assets/img/logo.png';
import bomba1 from '../assets/img/bomba1.png';
---

<Layout title="Gamberini | Inicio">
	<main>
        <div class="main-container">
            <div class="title">
                <h1>
                    <a class="logo-title" href="/GAMBERINI.astro/index.html">
                        <Image src={logo} alt="Logo Gamberini" />
                    </a>
                </h1>
            </div>
            <div class="title-divider"></div>
            <h2>Inicio</h2>
        </div>
        <div class="banner-container">
            <div class="banner" id="banner">
                <a href="/GAMBERINI.astro/sistema-de-protección-contra-incendios.html" class="banner-slide">
                    <Image src={bomba1} alt="Bomb 1" />
                </a>
                <a href="/GAMBERINI.astro/diseño-y-montaje.html" class="banner-slide">
                    <Image src={bomba1} alt="Bomb 2" />
                </a>
                <a href="/GAMBERINI.astro/servicio-tecnico.html" class="banner-slide">
                    <Image src={bomba1} alt="Bomb 3" />
                </a>
            </div>
            <div class="banner-buttons">
                <button id="prev">&#10094;</button>
                <button id="next">&#10095;</button>
            </div>
        </div>
    </main>
</Layout>

<style>
.banner-container {
    position: relative;
    width: 100vw;
    height: 50vh;
    overflow: hidden;
    box-shadow: 0 0 8px 4px rgba(0,0,0,0.05);
}

.banner {
    display: flex;
    height: 100%;
    transition: transform 0.5s ease-in-out;
}

.banner-slide {
    display: block;
    position: relative;
    width: 100vw;
    height: 100%;
    flex-shrink: 0;
    z-index: 1;
}

.banner-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.banner-buttons {
    position: absolute;
    top: 50%;
    width: 100%;
    display: flex;
    justify-content: space-between;
    transform: translateY(-50%);
    padding: 0 2rem 0 1rem;
    z-index: 10;
    pointer-events: none;
}

.banner-buttons button {
    background-color: rgba(0, 0, 0, 0.5);
    border: none;
    color: #fff;
    font-size: 2.5rem;
    cursor: pointer;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: 0.3s;
    pointer-events: auto;
}

.banner-buttons button:hover {
    background-color: rgba(0, 0, 0, 0.7);
}
</style>