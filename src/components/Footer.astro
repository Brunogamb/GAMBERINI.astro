---
import { Image } from 'astro:assets';
import logo from '../assets/img/logoblanco.webp';
import logofullhover from '../assets/img/logohover.webp';
---

<footer>
    <div class="footer-content">
        <div class="footer-grid">
            <div class="footer-column brand-col">
                <a href="/" class="footer-logo">
                    <Image src={logo} alt="Gamberini Logo" class="logo-full" />
                    <Image src={logofullhover} alt="Logo hover" class="logo-full-hover" loading="eager" />
                </a>
                <p class="brand-desc">Especialistas en sistemas de bombeo y protección contra incendios.</p>
                <a href="https://instagram.com/gamberinibombas" target="_blank" class="ig-link">
                    <i class="fab fa-instagram"></i> @gamberinibombas
                </a>
            </div>

            <div class="footer-column">
                <h3>Ubicación</h3>
                <p>Francisco Soler 1083</p>
                <p>Paraná, Entre Ríos</p>
            </div>

            <div class="footer-column cta-col">
                <h3>¿Necesitás asesoramiento?</h3>
                <p>Contactate con nuestras áreas de Ingeniería, Service o Administración.</p>
                <a href="/contacto" class="btn-footer">Contactar</a>
            </div>
        </div>

        <div class="footer-divider"></div>

        <div class="footer-bottom">
            <p class="copyright">&copy; {new Date().getFullYear()} Gamberini. Todos los derechos reservados.</p>
            <p class="dev">Desarrollado por <a href="https://github.com/BrunoGamb" target="_blank">BrunoGamb</a></p>
        </div>
    </div>
</footer>

<style>
footer {
    background: linear-gradient(90deg, var(--brand-900) 20%, var(--brand-800) 45%, var(--brand-700) 95%);
    box-shadow: var(--shadow-top);
    display: flex;
    flex-direction: column;
    align-items: center;
    color: var(--white);
    text-wrap: balance;
    padding: 10px 20px;
}

.footer-grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr 1fr 1.2fr; 
    gap: 50px;
    margin-bottom: 50px;
}

h3 {
    text-transform: uppercase;
    font-size: 18px;
    margin-bottom: 10px;
    letter-spacing: 1.5px;
    font-weight: 800;
}

.footer-content {
    max-width: 1200px;
    width: 100%;
    display: grid;
}

.footer-column {
    display: flex;
    flex-direction: column;
    align-self: flex-start;
    margin: 50px 0 30px 0;
    pointer-events: none;
}

.footer-section ul {
    list-style: none;
}

.footer-column a {
    width: fit-content;
    pointer-events: auto;
    white-space: nowrap;
}

.footer-column a:hover {
    color: #fff;
}

.footer-column a, .footer-column p {
    font-size: 14px;
    line-height: 1.6;
    color: rgba(var(--white-rgb), 0.8);
    text-decoration: none;
    display: block;
    transition: 0.3s;
}

.location:hover a {
    color: var(--accent);
}

.footer-divider {
    width: 100%;
    max-width: 1200px;
    height: 1px;
    background: linear-gradient(to right, var(--accent) 0%, var(--bg) 100%);
    opacity: 0.6;
    grid-column: 1 / -1;
    margin: 10px 0;
}

.footer-bottom {
    display: flex;
    max-width: 1200px;
    width: 100%;
    justify-content: space-between;
    align-items: center;
    gap: 30px;
    margin: 30px auto;
    color: rgba(var(--white-rgb), 0.6);
    line-height: 1.4;
    font-size: 12px;
}

.footer-logo {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
}

.footer-logo img {
    height: 26px;
    width: auto;
}

.dev a {
    font-weight: 600;
}

.copyright p {
    max-width: 350px;
    text-align: center;
}

.logo-full-hover{
    display: none;
}

.footer-logo:hover .logo-full {
    display: none;
}

.footer-logo:hover .logo-full-hover {
    display: inline;
}

@media (max-width: 745px) {
    .footer-content {
        display: flex;
        flex-direction: column;
        margin-top: 30px;
    }

    .footer-section {
        margin: 16px 0;
    }
}

.btn-footer {
    display: inline-block !important;
    margin-top: 10px;
    padding: 12px 25px;
    border: 1px solid var(--accent);
    color: var(--accent) !important;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 12px !important;
    letter-spacing: 1px;
    border-radius: 4px;
    text-align: center;
}

.btn-footer:hover {
    background: var(--accent);
    color: #0a192f !important;
}

@media (max-width: 992px) {
    .footer-grid { grid-template-columns: repeat(2, 1fr); }
}

@media (max-width: 600px) {
    .footer-grid { grid-template-columns: 1fr; text-align: center; }
    .footer-column a, .footer-column p { margin-left: auto; margin-right: auto; }
    .footer-bottom { flex-direction: column; gap: 15px; text-align: center; }
}

</style>