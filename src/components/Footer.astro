<style>
footer {
    background: linear-gradient(90deg, var(--brand-900) 20%, var(--brand-800) 45%, var(--brand-700) 95%);
    box-shadow: var(--shadow-top);
    display: flex;
    flex-direction: column;
    align-items: center;
    color: var(--white);
    padding: 10px 20px;
    text-wrap: balance
}

footer h3 {
    text-transform: uppercase;
    font-size: 18px;
    margin-bottom: 5px;
}

.footer-content {
    max-width: 1200px;
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
}

.footer-section {
    display: flex;
    flex-direction: column;
    align-self: flex-start;
    margin: 50px 0 30px 0;
    pointer-events: none;
}

.footer-section ul {
    list-style: none;
}

.footer-section a {
    line-height: 2;
    width: fit-content;
    pointer-events: auto;
    white-space: nowrap;
    display: inline-block; 
}

.location:hover a {
    color: var(--accent);
}

.footer-divider {
    width: 100%;
    max-width: 1200px;
    height: 1px;
    background: linear-gradient(to right, var(--accent) 0%, var(--bg) 100%);
    opacity: 0.6;
    grid-column: 1 / -1;
    margin: 10px 0;
}

.footer-bottom {
    display: flex;
    max-width: 1200px;
    width: 100%;
    justify-content: space-between;
    align-items: center;
    gap: 30px;
    margin: 30px auto;
    color: rgba(var(--white-rgb), 0.85);
    font-size: 14px;
    line-height: 1.4;
}

.footer-bottom img {
    height: 26px;
    width: auto;
}

.footer-logo {
    display: flex;
    align-items: center;
}

.dev-link {
    font-weight: 600;
}

.dev-link:hover, footer a:hover {
    color: var(--accent);
}

.copyright p {
    max-width: 350px;
    text-align: center;
}

.logo-full-hover{
    display: none;
}

.footer-logo:hover .logo-full {
    display: none;
}

.footer-logo:hover .logo-full-hover {
    display: inline;
}

@media (max-width: 745px) {
    .footer-content {
        display: flex;
        flex-direction: column;
        margin-top: 30px;
    }

    .footer-section {
        margin: 16px 0;
    }
}
</style>