---
import { Image } from 'astro:assets';
import logo from '../assets/img/logoblanco.webp';
import logofullhover from '../assets/img/logohover.webp';
---

<footer>
    <div class="footer-content">
        <div class="footer-grid">
            <div class="footer-column brand-col">
                <a href="/" class="footer-logo">
                    <Image src={logo} alt="Gamberini Logo" class="logo-full" />
                    <Image src={logofullhover} alt="Logo hover" class="logo-full-hover" loading="eager" />
                </a>
                <p class="brand-desc">Especialistas en sistemas de bombeo y protección contra incendios.</p>
                <div class="social-pills">
                    <a href="https://instagram.com/gamberinibombas" target="_blank" class="ig-link" rel="noopener noreferrer">
                        <i class="fab fa-instagram"></i> @gamberinibombas
                    </a>
                </div>
            </div>

            <div class="footer-column">
                <h3>Ubicación</h3>
                <p>Francisco Soler 1083</p>
                <p>Paraná, Entre Ríos</p>
            </div>

            <div class="footer-column cta-col">
                <h3>¿Necesitás asesoramiento?</h3>
                <p>Contactate con nuestras áreas de Ingeniería, Service o Administración.</p>
                <a href="/contacto" class="btn-footer">Contactar</a>
            </div>
        </div>

        <div class="footer-divider"></div>

        <div class="footer-bottom">
            <p class="copyright">&copy; {new Date().getFullYear()} Gamberini. Todos los derechos reservados.</p>
            <p class="dev">Desarrollado por <a href="https://github.com/BrunoGamb" target="_blank" rel="noopener noreferrer">BrunoGamb</a></p>
        </div>
    </div>
</footer>

<style>
footer {
    background: linear-gradient(90deg, var(--brand-900) 20%, var(--brand-800) 45%, var(--brand-700) 95%);
    box-shadow: var(--shadow-top);
    display: flex;
    flex-direction: column;
    align-items: center;
    color: var(--white);
    text-wrap: balance;
    padding: 10px 20px;
}

.footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1.5fr; 
    gap: 50px; 
}

h3 {
    text-transform: uppercase;
    font-size: 18px;
    margin-bottom: 10px;
    letter-spacing: 1.5px;
    font-weight: 800;
}

.footer-content {
    max-width: 1200px;
    width: 100%;
    display: grid;
}

.footer-column {
    display: flex;
    flex-direction: column;
    align-self: flex-start;
    margin: 50px 0 30px 0;
    pointer-events: none;
}

.footer-section ul {
    list-style: none;
}

.footer-column a {
    width: fit-content;
    pointer-events: auto;
    white-space: nowrap;
}

.footer-column a:hover {
    color: #fff;
}

.footer-column, .footer-column {
    font-size: 14px;
    line-height: 1.6;
    color: rgba(var(--white-rgb), 0.8);
    text-decoration: none;
    display: block;
    transition: 0.3s;
}

.location:hover a {
    color: var(--accent);
}

.footer-divider {
    width: 100%;
    max-width: 1200px;
    height: 1px;
    background: linear-gradient(to right, var(--accent) 0%, var(--bg) 100%);
    opacity: 0.6;
    grid-column: 1 / -1;
    margin: 10px 0;
}

.footer-bottom {
    display: flex;
    max-width: 1200px;
    width: 100%;
    justify-content: space-between;
    align-items: center;
    gap: 30px;
    margin: 8px auto;
    color: rgba(var(--white-rgb), 0.6);
    line-height: 1.4;
    font-size: 13px;
}

.footer-logo {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
}

.footer-logo img {
    height: 26px;
    width: auto;
}

.social-pills a {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: var(--accent);
    padding: 8px 16px;
    border-radius: var(--radius-sm);
    color: var(--brand-900);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.2s ease;
    margin-top: 15px;
    font-weight: 600;
}

.dev a {
    font-weight: 600;
    font-size: 14px;
    border-bottom: 1px solid rgba(var(--white-rgb), 0.6);
}

.dev a:hover {
    color: var(--white);
    border-bottom-color: var(--white);
    border-bottom-width: 2px;
}

.copyright p {
    max-width: 350px;
    text-align: center;
}

.logo-full-hover{
    display: none;
}

.footer-logo:hover .logo-full {
    display: none;
}

.footer-logo:hover .logo-full-hover {
    display: inline;
}

.btn-footer {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: var(--accent);
    color: var(--brand-900);
    text-decoration: none;
    transition: all 0.2s ease;
    margin-top: 15px;
    font-weight: 600;
	padding: 10px 20px; 
    font-size: 14px; 
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: var(--radius-sm);
}

.btn-footer:hover, .social-pills a:hover {
    background: var(--brand-700);
    color: var(--white);
    transform: scale(1.05);
    box-shadow: var(--shadow-lg);
}

@media (max-width: 745px) {
    .footer-grid { 
        grid-template-columns: 1fr; 
        text-align: center;
        gap: 0;
    }

    .footer-column a, .footer-column p { 
        margin-left: auto; 
        margin-right: auto; 
    }

    .footer-column {
        margin: 20px 0;
    }

    .footer-bottom { 
        flex-direction: column; 
        gap: 15px; 
        text-align: center; }
}
</style>