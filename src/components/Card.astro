---
import { Image } from 'astro:assets';

export interface Props {
    image: any;
    alt?: string;
    text: string;
    logo?: any;
    logoAlt?: string;
}

const { image, alt, text, logo, logoAlt = "Ingenier√≠a" } = Astro.props;
---

<div class="modern-card">
    <div class="card-header">
        <Image 
            src={image} 
            alt={alt || 'Card image'} 
            class="main-image"
        />
    </div>
    
    <div class="card-body">
        <div class="text-content">
            <p set:html={text}></p>
        </div>
        
        {logo && (
            <div class="certification-area">
                <div class="divider"></div>
                <Image src={logo} alt={logoAlt || 'Logo'} class="auth-logo" />
            </div>
        )}
    </div>
</div>

<style>
.modern-card {
    background: var(--white);
    border-radius: var(--radius-md);
    display: flex;
    flex-direction: column;
    position: relative;
    border: 2px solid rgba(var(--brand-900-rgb), 0.05);
    box-shadow: var(--shadow-sm);
    height: 100%;
}

.card-header {
    position: relative;
    height: 300px;
    overflow: hidden;
    border-radius: var(--radius-md) var(--radius-md) 0 0;
}

.main-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.card-body {
    padding: 30px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}

.text-content p {
    font-size: 16px;
    line-height: 1.7;
    color: var(--text);
    font-weight: 400;
    margin: 0;
}

.text-content p :global(span) {
    color: var(--brand-900);
    font-weight: 700;
    background: linear-gradient(to bottom, transparent 80%, var(--accent) 60%);
    background-size: 100% 100%;
}

.certification-area {
    margin-top: auto;
    padding-top: 20px;
}

.divider {
    height: 1px;
    background: var(--brand-700);
    margin-bottom: 20px;
    opacity: 0.2;
}

.auth-logo {
    height: 50px;
    width: auto;
    object-fit: contain;
}
</style>