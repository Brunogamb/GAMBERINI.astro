---
import { Image } from 'astro:assets';

export interface Props {
    image: any;
    alt?: string;
    text: string;
    logo?: any;
    logoAlt?: string;
}

const { image, alt, text, logo, logoAlt } = Astro.props;
---

<div class="card">
    <div class="card-img">
        <Image src={image} alt={alt || 'Card image'} />
    </div>
    <div class="card-text">
        <p set:html={text}></p>
    </div>
    {logo && (
        <Image src={logo} alt={logoAlt || 'Logo'} class="service-logos" />
    )}
</div>

<style>
.card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 0 8px 4px rgba(0,0,0,0.05);
    overflow: hidden;
    transition: box-shadow 0.3s, transform 0.3s;
    display: flex;
    flex-direction: column;
}

.card:hover {
    transform: translateY(-4px) scale(1.02);
}

.card-img {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.card-img img {
    width: 100%;
    height: 350px;
    object-fit: cover;
    transition: transform 0.3s;
}

.card:hover .card-img img {
    transform: scale(1.05);
}

.card-text p {
    padding: 32px;
    font-weight: 300;
    color: #232323;
    line-height: 1.6;
    text-wrap: balance;
    font-size: clamp(16px, 3vw, 18px);
}

.card-text p :global(span) {
    text-transform: uppercase;
    font-weight: bold;
    color: #29166f;
}

.service-logos {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: auto auto 20px auto;
    max-height: 60px;
    height: 100%;
    width: auto;
}
</style>