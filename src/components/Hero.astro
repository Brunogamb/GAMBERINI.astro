---
import { Image } from 'astro:assets';

export interface Props {
    title: string;
    description: string;
    image: any;
    alt?: string;
}

const { title, description, image, alt } = Astro.props;
---

<section class="banner-hero" role="region" aria-labelledby="hero-heading">
    <div class="banner-hero-img">
        <Image src={image} alt={alt || title} />
        <div class="banner-hero-overlay" aria-hidden="true"></div>
        <div class="banner-text">
            <h1 id="hero-heading">{title}</h1>
            <p>{description}</p>
        </div>
    </div>
</section>

<style>

.banner-hero {
    overflow: hidden;
    box-shadow: 0 0 8px 4px rgba(0,0,0,0.05);
    margin: 0 auto 24px auto;
}

.banner-hero-img {
    position: relative;
    aspect-ratio: 16/6;
    max-height: 300px;
    width: 100dvw;
}

.banner-hero-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.banner-hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, #29166fe1 20%, #3a2a8fe1 45%, #5145b6e1 75%);
    opacity: 0.7;
    backdrop-filter: blur(6px);
}

.banner-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    color: #fff;
    text-align: center;
    word-break: break-word;
    text-wrap: balance;
}

.banner-text h1 {
    font-size: clamp(18px, 8vw, 38px);
    font-weight: 700;
    margin-bottom: 18px;
    line-height: 1.1;
}

.banner-text p {
    font-size: clamp(14px, 3vw, 20px);
    font-weight: 200;
    line-height: 1.5;
    color: #e4e0fa;
}

@media (max-width: 736px) {
    .banner-text {
        width: 100%;
    }

    .banner-text p{
        display: none;
    }

    .banner-text h1 {
        margin: auto;
    }
}
</style>