---
import sistemaIncendiosImg from '../assets/hero/sistema-incendios.webp';
import diseñoMontajeImg from '../assets/hero/diseño-montaje.webp';
import servicioTecnicoImg from '../assets/hero/servicio-tecnico.webp';
---
<div class="banner-wrapper">
    <div class="banner-carousel">
        <div class="carousel-track" id="banner-track">
            <div class="carousel-slide" style={{ "--bg-image": `url(${sistemaIncendiosImg.src})` }}>
                <div class="banner-content">
                    <h2>Ingeniería de Protección <br/><strong>Contra Incendios</strong></h2>
                    <p>Diseño, instalación y mantenimiento bajo normas internacionales NFPA para la industria y el comercio.</p>
                    <div class="cta-group">
                        <a href="/sistema-de-protección-contra-incendios" class="btn-primary">Sistemas contra incendios</a>
                        <a href="/contacto" class="btn-outline">Contactar</a>
                    </div>
                </div>
            </div>

            <div class="carousel-slide" style={{ "--bg-image": `url(${diseñoMontajeImg.src})` }}>
                <div class="banner-content">
                    <h2>Bombas de Alta <br/><strong>Eficiencia Hídrica</strong></h2>
                    <p>Distribuidor oficiales de <strong>Grundfos</strong> y <strong>Wilo</strong>. Tecnología avanzada en bombeo centrífugo y presurización.</p>
                    <div class="cta-group">
                        <a href="/diseño-y-montaje" class="btn-primary">Diseño y Montaje</a>
                        <a href="/contacto" class="btn-outline">Contactar</a>
                    </div>
                </div>
            </div>

            <div class="carousel-slide" style={{ "--bg-image": `url(${servicioTecnicoImg.src})` }}>
                <div class="banner-content">
                    <h2>Servicio Técnico <br/><strong>Especializado</strong></h2>
                    <p>Reparaciones certificadas, puesta en marcha y contratos de mantenimiento preventivo integral.</p>
                    <div class="cta-group">
                        <a href="/servicio-tecnico" class="btn-primary">Servicio técnico</a>
                        <a href="/contacto" class="btn-outline">Contactar</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="carousel-controls">
            <button id="prev" aria-label="Anterior">←</button>
            <div class="progress-bars" id="progress-bars">
                <div class="progress-bar"><div class="progress-fill"></div></div>
                <div class="progress-bar"><div class="progress-fill"></div></div>
                <div class="progress-bar"><div class="progress-fill"></div></div>
            </div>
            <button id="next" aria-label="Siguiente">→</button>
            <button id="pause" aria-label="Pausar">⏸</button>
        </div>
    </div>
</div>

<style>
.banner-wrapper {
    position: relative;
    background: var(--dark-bg);
}

.banner-carousel {
    position: relative;
    height: calc(84vh - 100px);
    min-height: 600px;
    overflow: hidden;
}

.carousel-track {
    display: flex;
    height: 100%;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.carousel-slide {
    flex: 0 0 100%;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    padding: 0 8%;
    position: relative;
    background-image: linear-gradient(to right, rgba(10, 20, 30, 0.9) 30%, transparent 70%), var(--bg-image);
}

.banner-content {
    max-width: 700px;
    color: var(--white);
    z-index: 10;
}

.banner-content h2 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    line-height: 1.1;
    margin-bottom: 20px;
    font-weight: 300;
    text-wrap: balance;
}

.banner-content h2 strong {
    font-weight: 800;
    color: var(--white);
    display: block;
}

.banner-content p {
    font-size: clamp(1.1rem, 1.5vw, 1.2rem);
    color: #cbd5e1;
    margin-bottom: 35px;
    max-width: 550px;
    line-height: 1.6;
    text-wrap: balance;
}

.cta-group {
    display: flex;
    gap: 15px;
}

.btn-primary, .btn-outline {
    padding: 16px 32px;
    text-decoration: none;
    font-weight: 700;
    text-transform: uppercase;
    transition: all 0.3s ease;
    text-align: center;
    border-radius: var(--radius-md);
}

.btn-primary {
    background: var(--brand-800);
    color: var(--white);
    border: 2px solid var(--brand-800);
}

.btn-outline {
    background: transparent;
    border: 2px solid var(--white);
    color: var(--white);
}

.btn-outline:hover {
    background: var(--white);
    color: var(--dark-bg);
}

.btn-primary:hover {
    background: var(--brand-900);
	transform: scale(1.05);
    border-color: var(--brand-900);
}

.carousel-controls {
    position: absolute;
    bottom: 40px;
    left: 8%;
    right: 8%;
    display: flex;
    align-items: center;
    gap: 20px;
    z-index: 30;
}

.carousel-controls button {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(4px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: var(--white);
    width: 45px;
    height: 45px;
    border-radius: 50%;
    cursor: pointer;
    flex-shrink: 0;
    transition: all 0.3s;
    font-size: 18px
}

.progress-bars {
    display: flex;
    gap: 8px;
    flex-grow: 1;
    max-width: 400px;
}

.progress-bar {
    height: 4px;
    background: rgba(255, 255, 255, 0.2);
    flex-grow: 1;
    border-radius: 2px;
    overflow: hidden;
}

.progress-fill {
    height: 100%;
    width: 0%;
    background: var(--brand-700);
}

@media (max-width: 745px) {
    .banner-carousel {
        height: calc(84vh - 80px);
    }
    
    .carousel-slide {
        align-items: center;
        text-align: center;
        padding: 0 20px;
    }

    .banner-content {
        margin: 0 auto;
    }

    .banner-content p {
        margin: 0 auto 30px auto;
    }

    .cta-group {
        flex-direction: column;
        width: 100%;
    }

    .carousel-controls {
        bottom: 20px;
        left: 20px;
        right: 20px;
    }

    .carousel-controls button {
        width: 40px;
        height: 40px;
        font-size: 16px;
    }

    #pause { 
        display: none; 
    }

    .carousel-slide {
        background-image: linear-gradient(rgba(10, 20, 30, 0.8), rgba(10, 20, 30, 0.8)), var(--bg-image);
    }
}
</style>

<script type="module">
document.addEventListener('DOMContentLoaded', () => {
	const track = document.getElementById("banner-track");
	const fills = document.querySelectorAll(".progress-fill");
	const slides = document.querySelectorAll(".carousel-slide");
	const total = slides.length;

	const prevBtn = document.getElementById("prev");
	const nextBtn = document.getElementById("next");
	const pauseBtn = document.getElementById("pause");

	let index = 0;
	const duration = 6000;
	let progress = 0;
	let lastTime = performance.now();
	let paused = false;

	function update() {
		track.style.transform = `translateX(-${index * 100}%)`;
	}

	function step(now) {
		if (!paused) {
			const delta = now - lastTime;
			progress += delta / duration;

			if (progress >= 1) {
				progress = 0;
				index = (index + 1) % total;
				update();
			}

			fills.forEach((fill, i) => {
				fill.style.width = i === index ? `${progress * 100}%` : '0%';
			});
		}

		lastTime = now;
		requestAnimationFrame(step);
	}

	nextBtn.onclick = () => {
		index = (index + 1) % total;
		progress = 0;
		update();
	};

	prevBtn.onclick = () => {
		index = (index - 1 + total) % total;
		progress = 0;
		update();
	};

	pauseBtn.onclick = () => {
		paused = !paused;
		pauseBtn.textContent = paused ? "▶" : "⏸";
	};

	requestAnimationFrame(step);
});
</script>