---
import sistemaIncendiosImg from '../assets/hero/sistema-incendios.webp';
import diseñoMontajeImg from '../assets/hero/diseño-montaje.webp';
import servicioTecnicoImg from '../assets/hero/servicio-tecnico.webp';
---
<div class="banner-wrapper">
    <div class="banner-carousel">
        <div class="carousel-track" id="banner-track">
            <div class="carousel-slide" style={{ backgroundImage: `linear-gradient(to right, rgba(10, 20, 30, 0.9) 30%, transparent 70%), url(${sistemaIncendiosImg.src})` }}>
                <div class="banner-content">
                    <span class="badge">Protección de Activos</span>
                    <h1>Ingeniería de Protección <br/><strong>Contra Incendios</strong></h1>
                    <p>Diseño, instalación y mantenimiento bajo normas internacionales NFPA para la industria y el comercio.</p>
                    <div class="cta-group">
                        <a href="/sistema-de-protección-contra-incendios" class="btn-primary">Sistemas contra incendios</a>
                        <a href="/contacto" class="btn-outline">Contactar</a>
                    </div>
                </div>
            </div>

            <div class="carousel-slide" style={{ backgroundImage: `linear-gradient(to right, rgba(10, 20, 30, 0.9) 30%, transparent 70%), url(${diseñoMontajeImg.src})` }}>
                <div class="banner-content">
                    <span class="badge">Partners Oficiales</span>
                    <h1>Bombas de Alta <br/><strong>Eficiencia Hídrica</strong></h1>
                    <p>Distribuidor oficiales de <strong>Grundfos</strong> y <strong>Wilo</strong>. Tecnología avanzada en bombeo centrífugo y presurización.</p>
                    <div class="cta-group">
                        <a href="/diseño-y-montaje" class="btn-primary">Diseño y Montaje</a>
                        <a href="/contacto" class="btn-outline">Contactar</a>
                    </div>
                </div>
            </div>

            <div class="carousel-slide" style={{ backgroundImage: `linear-gradient(to right, rgba(10, 20, 30, 0.9) 30%, transparent 70%), url(${servicioTecnicoImg.src})` }}>
                <div class="banner-content">
                    <span class="badge">Soporte 24/7</span>
                    <h1>Servicio Técnico <br/><strong>Especializado</strong></h1>
                    <p>Reparaciones certificadas, puesta en marcha y contratos de mantenimiento preventivo integral.</p>
                    <div class="cta-group">
                        <a href="/servicio-tecnico" class="btn-primary">Servicio técnico</a>
                        <a href="/contacto" class="btn-outline">Contactar</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="carousel-controls">
            <button id="prev" aria-label="Anterior">←</button>
            <div class="progress-bars" id="progress-bars">
                <div class="progress-bar"><div class="progress-fill"></div></div>
                <div class="progress-bar"><div class="progress-fill"></div></div>
                <div class="progress-bar"><div class="progress-fill"></div></div>
            </div>
            <button id="next" aria-label="Siguiente">→</button>
            <button id="pause" aria-label="Pausar">⏸</button>
        </div>
    </div>
</div>

<style>
.banner-wrapper {
    position: relative;
    background: var(--dark-bg);
}

.banner-carousel {
    position: relative;
    height: calc(84vh - 100px);
    min-height: 600px;
    overflow: hidden;
}

.carousel-track {
    display: flex;
    height: 100%;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.carousel-slide {
    flex: 0 0 100%;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    padding: 0 8%;
}

.banner-content {
    max-width: 700px;
    color: var(--white);
    z-index: 10;
}

.badge {
    display: inline-block;
    background: var(--accent-red);
    color: var(--white);
    padding: 6px 12px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 20px;
    border-radius: 2px;
}

.banner-content h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    line-height: 1.1;
    margin-bottom: 20px;
    font-weight: 300;
}

.banner-content h1 strong {
    font-weight: 800;
    color: var(--white);
    display: block;
}

.banner-content p {
    font-size: 1.2rem;
    color: #cbd5e1;
    margin-bottom: 35px;
    max-width: 550px;
    line-height: 1.6;
}

.cta-group {
    display: flex;
    gap: 15px;
    align-items: center;
}

.btn-primary {
    background: var(--brand-800);
    color: var(--white);
    padding: 16px 32px;
    text-decoration: none;
    font-weight: 700;
    text-transform: uppercase;
    transition: all 0.3s;
    border: 2px solid var(--brand-800);
}

.btn-primary:hover {
    background: var(--brand-900);
	transform: scale(1.05);
    border-color: var(--brand-900);
}

.btn-outline {
    background: transparent;
    border: 2px solid var(--white);
    color: var(--white);
    padding: 16px 32px;
    text-decoration: none;
    font-weight: 700;
    text-transform: uppercase;
    transition: all 0.3s;
}

.btn-outline:hover {
    background: var(--white);
    color: var(--dark-bg);
}

.carousel-controls {
    position: absolute;
    bottom: 40px;
    left: 8%;
    right: 8%;
    display: flex;
    align-items: center;
    gap: 30px;
    z-index: 30;
}

.carousel-controls button {
    background: transparent;
    border: 1px solid rgba(255,255,255,0.3);
    color: var(--white);
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    font-size: 20px;
    transition: all 0.3s;
}

.carousel-controls button:hover {
    background: var(--white);
    color: var(--dark-bg);
}

.progress-bars {
    display: flex;
    gap: 10px;
    flex-grow: 1;
    max-width: 400px;
}

.progress-bar {
    height: 3px;
    background: rgba(255,255,255,0.2);
    flex-grow: 1;
    position: relative;
    overflow: hidden;
}

.progress-fill {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 0%;
    background: var(--brand-700);
}

@media (max-width: 768px) {
    .banner-content { 
		padding-top: 
		50px; 
	}

    .cta-group { 
		flex-direction: 
		column; align-items: 
		flex-start; 
	}

    .carousel-controls { 
		justify-content: space-between; 
		left: 5%; 
		right: 5%; 
	}

    .progress-bars { 
		max-width: 150px; 
	}
}
</style>

<script type="module">
document.addEventListener('DOMContentLoaded', () => {
	const track = document.getElementById("banner-track");
	const fills = document.querySelectorAll(".progress-fill");
	const slides = document.querySelectorAll(".carousel-slide");
	const total = slides.length;

	const prevBtn = document.getElementById("prev");
	const nextBtn = document.getElementById("next");
	const pauseBtn = document.getElementById("pause");

	let index = 0;
	const duration = 6000;
	let progress = 0;
	let lastTime = performance.now();
	let paused = false;

	function update() {
		track.style.transform = `translateX(-${index * 100}%)`;
	}

	function step(now) {
		if (!paused) {
			const delta = now - lastTime;
			progress += delta / duration;

			if (progress >= 1) {
				progress = 0;
				index = (index + 1) % total;
				update();
			}

			fills.forEach((fill, i) => {
				fill.style.width = i === index ? `${progress * 100}%` : '0%';
			});
		}

		lastTime = now;
		requestAnimationFrame(step);
	}

	nextBtn.onclick = () => {
		index = (index + 1) % total;
		progress = 0;
		update();
	};

	prevBtn.onclick = () => {
		index = (index - 1 + total) % total;
		progress = 0;
		update();
	};

	pauseBtn.onclick = () => {
		paused = !paused;
		pauseBtn.textContent = paused ? "▶" : "⏸";
	};

	requestAnimationFrame(step);
});
</script>